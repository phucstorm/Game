<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgameplay"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".GamePlayLevel1"
    tools:showIn="@layout/activity_game_play_level1">

    <ImageView
        android:id="@+id/ScreenPlay"
        android:layout_width="336dp"
        android:layout_height="304dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.478"
        app:srcCompat="@drawable/border" />

    <ImageView
        android:id="@+id/textThree"
        android:layout_width="88dp"
        android:layout_height="79dp"
        android:layout_marginEnd="252dp"
        android:layout_marginTop="208dp"
        android:background="@drawable/border_circle2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pikachu" />

    <ImageView
        android:id="@+id/textTwo"
        android:layout_width="88dp"
        android:layout_height="79dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="208dp"
        android:background="@drawable/border_circle2"
        app:layout_constraintEnd_toStartOf="@+id/picThree"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toEndOf="@+id/picOne"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pikachu" />

    <ImageView
        android:id="@+id/textOne"
        android:layout_width="88dp"
        android:layout_height="79dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="208dp"
        android:background="@drawable/border_circle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pikachu" />

    <ImageView
        android:id="@+id/beeicon"
        android:layout_width="91dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.635"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/imgscreenplay" />

    <ImageView
        android:id="@+id/picOne"
        android:layout_width="88dp"
        android:layout_height="79dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/border_circle1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mickey" />

    <ImageView
        android:id="@+id/picTwo"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/border_circle1"
        app:layout_constraintEnd_toStartOf="@+id/picThree"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toEndOf="@+id/picOne"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mickey" />

    <ImageView
        android:id="@+id/picThree"
        android:layout_width="88dp"
        android:layout_height="78dp"
        android:layout_marginEnd="252dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/border_circle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mickey" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="260dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/ScreenPlay"
        app:layout_constraintStart_toStartOf="@+id/ScreenPlay"
        app:layout_constraintTop_toBottomOf="@+id/picTwo"
        app:srcCompat="@drawable/trainline" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="46dp"
        android:layout_height="47dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logoscreenplay" />

    <ImageView
        android:id="@+id/pauseBtn"
        android:layout_width="72dp"
        android:layout_height="54dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.984"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pause" />

    <ImageView
        android:id="@+id/screenScore"
        android:layout_width="174dp"
        android:layout_height="210dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toEndOf="@+id/ScreenPlay"
        app:layout_constraintTop_toBottomOf="@+id/pauseBtn"
        app:layout_constraintVertical_bias="0.466"
        app:srcCompat="@drawable/border" />

    <ImageView
        android:id="@+id/screenAnswer"
        android:layout_width="141dp"
        android:layout_height="130dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/screenScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintStart_toStartOf="@+id/screenScore"
        app:srcCompat="@drawable/border_circle3" />

    <TextView
        android:id="@+id/tvCheck"
        android:layout_width="120dp"
        android:layout_height="83dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bevan"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/screenAnswer"
        app:layout_constraintEnd_toEndOf="@+id/screenAnswer"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/screenAnswer"
        app:layout_constraintTop_toTopOf="@+id/screenAnswer"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="63dp"
        android:layout_height="21dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bevan"
        android:text="SCORE :"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/screenAnswer"
        app:layout_constraintEnd_toStartOf="@+id/tvScore"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/screenScore"
        app:layout_constraintTop_toTopOf="@+id/screenScore"
        app:layout_constraintVertical_bias="0.684" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="59dp"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bevan"
        android:text="0 pt"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/screenAnswer"
        app:layout_constraintEnd_toEndOf="@+id/screenScore"
        app:layout_constraintTop_toTopOf="@+id/screenScore"
        app:layout_constraintVertical_bias="0.812" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bevan"
        android:text="60"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/screenScore"
        app:layout_constraintEnd_toStartOf="@+id/pauseBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/clock"
        android:layout_width="28dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/screenScore"
        app:layout_constraintEnd_toStartOf="@+id/tvTime"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toEndOf="@+id/ScreenPlay"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/clock" />

</android.support.constraint.ConstraintLayout>